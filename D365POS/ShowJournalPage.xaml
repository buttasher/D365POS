<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="D365POS.ShowJournalPage"
             xmlns:controls="clr-namespace:D365POS.Controls"
             Title="Transactions Journal">

    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="20">

        <!-- ===== TOP SECTION: Transactions + Customer ===== -->
        <Grid Grid.Row="0" ColumnDefinitions="3*,Auto" ColumnSpacing="20">

            <!-- Journal List -->
            <CollectionView x:Name="JournalList"
                            SelectionMode="Single"
                            HeightRequest="250"
                            SelectionChanged="OnJournalSelected">
                <CollectionView.Header>
                    <Grid Padding="10"
                          ColumnDefinitions="2*,*,*,2*,*"
                          BackgroundColor="#A66E43">
                        <Label Text="Business Date" FontAttributes="Bold"/>
                        <Label Text="Staff Id" Grid.Column="1" FontAttributes="Bold"/>
                        <Label Text="Transaction Type" Grid.Column="2" FontAttributes="Bold"/>
                        <Label Text="Receipt Id" Grid.Column="3" FontAttributes="Bold"/>
                        <Label Text="Total" Grid.Column="4" FontAttributes="Bold"/>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10"
                              ColumnDefinitions="2*,*,*,2*,*">
                            <Label Text="{Binding BusinessDate, StringFormat='{0:MM/dd/yyyy hh:mm tt}'}"/>
                            <Label Text="{Binding ShiftStaffId}" Grid.Column="1"/>
                            <Label Text="{Binding TransactionType}" Grid.Column="2"/>
                            <Label Text="{Binding ReceiptId}" Grid.Column="3"/>
                            <Label Text="{Binding Total, StringFormat='{0:N3}'}" Grid.Column="4"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Customer Info -->
            <StackLayout Grid.Column="1" Spacing="10" VerticalOptions="Start">
                <Label Text="Customer" FontSize="18" FontAttributes="Bold"/>
                <Label Text="There is no customer associated with this sale."
                       FontSize="14"
                       WidthRequest="200"/>
            </StackLayout>
        </Grid>

        <!-- ===== BOTTOM SECTION: Lines/Payments + Totals ===== -->
        <Grid Grid.Row="1" ColumnDefinitions="3*,Auto" ColumnSpacing="20">

            <!-- LEFT: Lines & Payments (column 0) -->
            <Grid Grid.Column="0" RowDefinitions="Auto, *" RowSpacing="10" VerticalOptions="Fill">

                <!-- Tabs (auto height) -->
                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="40" Grid.Row="0">
                    <StackLayout>
                        <Label Text="Lines"
                       FontAttributes="Bold"
                       TextColor="{Binding LinesTabColor}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLinesTabClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <BoxView HeightRequest="2"
                         BackgroundColor="{Binding LinesUnderlineColor}"
                         HorizontalOptions="Fill"/>
                    </StackLayout>

                    <StackLayout Grid.Column="1">
                        <Label Text="Payments"
                       FontAttributes="Bold"
                       TextColor="{Binding PaymentsTabColor}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnPaymentsTabClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <BoxView HeightRequest="2"
                         BackgroundColor="{Binding PaymentsUnderlineColor}"
                         HorizontalOptions="Fill"/>
                    </StackLayout>
                </Grid>

                <!-- Details list (fills remaining space) -->
                <CollectionView x:Name="DetailsList"
                                Grid.Row="1"
                                VerticalOptions="Fill"
                                HorizontalOptions="Fill"
                                SelectionMode="Multiple"
                                SelectionChanged="OnLineSelected">
                    <CollectionView.Header>
                        <Grid x:Name="DetailsHeaderGrid"
                              Padding="10"
                              ColumnDefinitions="2*,*,*"
                              BackgroundColor="#A66E43">
                            <Label x:Name="HeaderCol1" Text="Item" FontAttributes="Bold"/>
                            <Label x:Name="HeaderCol2" Text="Quantity" Grid.Column="1" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                            <Label x:Name="HeaderCol3" Text="Price" Grid.Column="2" FontAttributes="Bold" HorizontalTextAlignment="End"/>
                        </Grid>
                    </CollectionView.Header>
                    </CollectionView>
            </Grid>

            <!-- RIGHT: Totals (column 1) -->
            <Grid Grid.Column="1"
                  RowDefinitions="Auto,Auto,Auto"
                  ColumnDefinitions="*,Auto"
                  VerticalOptions="Start"
                  HorizontalOptions="Start"
                  Margin="0,30,0,0"
                  WidthRequest="220">
                <!-- optional fixed width for consistent layout -->
                <Label Text="SUBTOTAL" Grid.Row="0" VerticalOptions="Center"/>
                <Label Text="{Binding Subtotal, StringFormat='{0:N3}'}"
                       Grid.Row="0" Grid.Column="1"
                       HorizontalTextAlignment="End"
                       VerticalOptions="Center"/>

                <Label Text="TAX" Grid.Row="1" VerticalOptions="Center"/>
                <Label Text="{Binding Tax, StringFormat='{0:N3}'}"
                       Grid.Row="1" Grid.Column="1"
                       HorizontalTextAlignment="End"
                       VerticalOptions="Center"/>

                <Label Text="TOTAL" Grid.Row="2" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Text="{Binding Total, StringFormat='{0:N3}'}"
                       Grid.Row="2" Grid.Column="1"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="End"
                       VerticalOptions="Center"/>
            </Grid>
        </Grid>

        <!-- ===== FOOTER BAR (Bottom Buttons with Icons) ===== -->
        <Grid Grid.Row="2"
              BackgroundColor="Gray"
              Padding="15,10"
              ColumnDefinitions="*,Auto,Auto"
              HorizontalOptions="Fill"
              VerticalOptions="End"> 

            <!-- Print Receipt Button -->
            <HorizontalStackLayout Grid.Column="1"
                                   Spacing="6"
                                   Padding="10,0"
                                   VerticalOptions="Center"
                                   Margin="0,0,20,0">
                <Image Source="printing.png"
                       HeightRequest="30"
                       WidthRequest="20"
                       VerticalOptions="Center"/>
                <Label Text="Print receipt"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPrintReceiptClicked"/>
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>

            <!-- Return Button -->
            <HorizontalStackLayout Grid.Column="2"
                                   Spacing="6"
                                   Padding="10,0"
                                   VerticalOptions="Center">
                <Image Source="return.png"
                       HeightRequest="30"
                       WidthRequest="20"
                       VerticalOptions="Center"/>
                <Label Text="Return"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnReturnClicked"/>
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>
        </Grid>

        <!-- FULL SCREEN LOADER -->
        <Grid x:Name="loaderOverlay"
              IsVisible="False"
              VerticalOptions="Fill"
              HorizontalOptions="Fill"
              Grid.ColumnSpan="2">
                <ActivityIndicator x:Name="activityIndicator"
                                   IsRunning="True"
                                   WidthRequest="60"
                                   HeightRequest="60"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>
